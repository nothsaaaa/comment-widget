<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <% if (theme !== 'none') { %>
    <link rel="stylesheet" href="/widget.css">
  <% } %>
</head>
<body>
  <form method="POST">
    <input type="text" name="name" placeholder="Anonymous" maxlength="30" />
    <textarea name="comment" placeholder="Write a comment..." maxlength="150" required></textarea>
    <button type="submit">Post Comment</button>
  </form>

  <hr>

  <% if (pendingCount > 0) { %>
    <p style="color: orange; font-weight: bold;">
      Some comments are pending approval and will appear once approved.
    </p>
  <% } %>

  <% if (comments.length === 0) { %>
    <p>No comments yet.</p>
  <% } %>

  <% for (const { name, content } of comments) { %>
    <div class="comment">
      <strong><%= name %></strong><br>
      <%= content %>
    </div>
  <% } %>
</body>

</html>
